<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Графический редактор" Height="450" Width="800">
    <Grid>
        <Slider Name="BrushSize" Minimum="1" Maximum="100" Width="200" Height="30" VerticalAlignment="Top" Margin="150, 10, 0, 0"/>
        <ComboBox Name="Color" Width="120" Height="30" VerticalAlignment="Top" Margin="10">
            <ComboBoxItem Content="Красный"/>
            <ComboBoxItem Content="Синий"/>
            <ComboBoxItem Content="Зеленый"/>
        </ComboBox>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="412,305,0,0" VerticalAlignment="Top"/>
        <InkCanvas>
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Color="Red" Height="10" Width="1"/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas> 

    </Grid>
</Window>
